{
  "name": "frontend",
  "private": true,
  "version": "1.0.4",
  "type": "commonjs",
  "main": "main.js",
  "description": "TwitchFleet Desktop App",
  "author": "kirl",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "dotenv -e .env -- vite build && npx electron-builder"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/gantim/TwitchFleet"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^8.0.0",
    "electron": "^37.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.twitchfleet.app",
    "productName": "TwitchFleet",
    "icon": "build/icon.ico",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "publish": [
    {
      "provider": "github",
      "owner": "gantim",
      "repo": "TwitchFleet"
    }
  ]
  }  
}
